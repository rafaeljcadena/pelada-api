<p id="notice"><%= notice %></p>
<h1>Dados da Pelada</h1>
<table class="table">
	<tr>
		<th>Nome da Pelada:</th>
		<td><%= @pelada.title %></td>
	</tr>
  <tr>
    <th>Endereço:</th>
    <td><%= @pelada.address_full %></td>
  </tr>


	<tr>
		<th>Início:</th>
		<td><%= l @pelada.begin.to_date %></td>
	</tr>

</table>


<hr>


<!-- <div class="container"> -->
  <h2>Times Participantes</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Time</th>
        <th>Gols</th>
        <th colspan="3" style="text-align: center;">Ações</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @pelada.host.team_name %></td>
        <td></td>
          <td style="text-align: center;">
            <%= link_to soccer_team_path(@pelada.host), class: "btn btn-primary btn-circle" do %>
              <i class="fa fa-male"></i>
            <% end %>
          </td>
      </tr>
      <tr>
        <td><%= @pelada.guest.team_name %></td>
        <td></td>
          <td style="text-align: center;">
            <%= link_to soccer_team_path(@pelada.guest), class: "btn btn-primary btn-circle" do %>
              <i class="fa fa-male"></i>
            <% end %>
          </td>
      </tr>

    </tbody>
  </table>
<%= link_to 'Editar', edit_pelada_path(@pelada), class: "btn btn-warning" %> <%= link_to 'Back', peladas_path, class: "btn btn-default" %>
