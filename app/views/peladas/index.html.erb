
<!-- <div class="container"> -->
  <h2>Lista de Peladas</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <!-- <th>Posição</th> -->
        <th>Título</th>
        <th>Início</th>
        <th>Saldo de Gols</th>
        <th colspan="3" style="text-align: center;">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @peladas.each do |pelada| %>
        <tr>
          <td><%= pelada.title %></td>
          <td><%= l pelada.begin.to_date %></td>
          <td><%#= pelada.goals_scored %></td>
          <td>
            <%= link_to pelada_path(pelada), class: "btn btn-primary btn-circle" do %>
              <i class="fa fa-male"></i>
            <% end %>
          </td>    
          <td>
            <%= link_to edit_pelada_path(pelada), class: "btn btn-warning btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
          </td> 
          <td>
            <%= link_to pelada_path(pelada), class: "btn btn-danger btn-circle", method: :delete, data: {confirm: "Tem certeza?"} do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>       

        </tr>
      <% end %>
    </tbody>
  </table>
<!-- </div> -->