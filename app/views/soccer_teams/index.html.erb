
<!-- <div class="container"> -->
  <h2>Lista de Jogadores</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <!-- <th>Posição</th> -->
        <th>Nome</th>
        <th>Cartões Amarelos</th>
        <th>Cartões Vermelhos</th>
        <th>Faltas Cometidas</th>
        <th>Saldo de Gols</th>
        <th colspan="3" style="text-align: center;">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @soccer_teams.each do |soccer_team| %>
        <tr>
          <!-- <td><%#= player.nome %></td> -->
          <td><%= soccer_team.team_name %></td>
          <td><%= soccer_team.red_cards %></td>
          <td><%= soccer_team.yellow_cards %></td>
          <td><%= soccer_team.fouls_commited %></td>
          <td><%= soccer_team.goals_scored %></td>
          <td>
            <%= link_to soccer_team_path(soccer_team), class: "btn btn-primary btn-circle" do %>
              <i class="fa fa-male"></i>
            <% end %>
          </td>    
          <td>
            <%= link_to edit_soccer_team_path(soccer_team), class: "btn btn-warning btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
          </td> 
          <td>
            <%= link_to soccer_team_path(soccer_team), class: "btn btn-danger btn-circle", method: :delete, data: {confirm: "Tem certeza?"} do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </td>       

        </tr>
      <% end %>
    </tbody>
  </table>
    <div style="text-align: center;">
      <%= will_paginate @soccer_teams, renderer: BootstrapPagination::Rails, class: "pagination-lg", inner_window: 3 %>
    </div>
