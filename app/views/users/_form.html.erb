<style type="text/css">
  .form-group li{
    list-style-type:none;
  }
</style>

<%= semantic_form_for @user, html:{class: "form-group"} do |f| %>
  <div class="form-group">
    <%= f.input :nome, input_html:{class: "form-control", placeholder: "Nome do Jogador"} %>

    <%= f.input :email, input_html:{class: "form-control", placeholder: "E-mail"} %>

    <%= f.input :password, input_html:{class: "form-control", placeholder: "Senha"} %>

    <%= f.input :password_confirmation, input_html:{class: "form-control", placeholder: "Confirme sua Senha"} %>




    <%= f.input :birthdate, as: :string,input_html:{class: "form-control", placeholder: "Data de Nascimento"} %>

    <%= f.input :cpf, input_html:{class: "form-control", placeholder: "CPF"} %>

    <%= f.input :cell_phone, as: :string,input_html:{class: "form-control", placeholder: "Celular"} %>

    <%#= f.input :home_phone, as: :string,input_html:{class: "form-control", placeholder: "Residencial"} %>

    <%#= f.semantic_fields_for :address do |address| %>

    <%#= address.input :cep, as: :string, input_html:{class: "form-control", placeholder: "CEP"} %>
    <%#= address.input :street, as: :string, input_html:{class: "form-control", placeholder: "Rua"} %>
    <%#= address.input :complement, as: :string, input_html:{class: "form-control", placeholder: "Complemento"} %>
    <%#= address.input :city, as: :string, input_html:{class: "form-control", placeholder: "Cidade"} %>
    <%#= address.input :state, as: :string, input_html:{class: "form-control", placeholder: "Estado"} %>

    <%# end %>
    <%#= f.input :soccer_team_id, as: :select, collection: @soccer_teams.map{|p| [p.team_name, p.id]}, input_html:{class: "form-control", id: "soccer_team_select"} %>

    <%= f.input :soccer_team_id, as: :select, collection: SoccerTeam.all.map{|p| [p.team_name, p.id]}, input_html:{class: "form-control", id: "soccer_team_select"} %>
    <%= f.input :position, collection: User.positions.map{|p| [t("model.user.positions.#{p}"), p]}, input_html:{class: "form-control", placeholder: "Usar o Select2", id: "position_select"} %>

    <%= f.input :descricao, input_html:{class: "form-control"} %>

    <%= f.action :submit, as: :button, button_html: {class: "btn btn-success", id: "btn_success"} %>
  </div>
<% end %>

<script type="text/javascript">
$(document).ready(function() {
  $("#position_select").select2(
    {placeholder: "Selecione a posição" } 
    );
  $("#soccer_team_select").select2(
    {placeholder: "Selecione o time" } 
    );
});
$('#user_birthdate').inputmask('dd/mm/yyyy', {showMaskOnHover: false});
</script>
